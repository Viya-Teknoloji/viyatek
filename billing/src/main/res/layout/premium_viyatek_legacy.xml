<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/premiumToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/proximanovaregular"
            android:text="Premium Membership"
            android:textSize="@dimen/premium_pack" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumToolbar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/premium_trial_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/premium_purple"
                android:elevation="0dp"
                android:fontFamily="@font/proximanovaregular"
                android:text="@string/start_my_free_trial_button"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/premium_pack_button_text_size"
                app:layout_constraintDimensionRatio="w,1:5"
                app:layout_constraintEnd_toEndOf="@+id/materialCardView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/materialCardView2"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView2"
                app:layout_constraintWidth_percent=".7" />

            <TextView
                android:id="@+id/select_your_plan_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/proximanovasemibold"
                android:gravity="center"
                android:text="@string/select_plan_text"
                android:textSize="@dimen/premium_pack_button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintWidth_percent=".9" />

            <TextView
                android:id="@+id/information_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/proximanovaregular"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:text="@string/premium_below_button_info"
                android:textSize="@dimen/premium_topic_description_text_size"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/premium_trial_button"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="@+id/premium_trial_button"
                app:layout_constraintTop_toBottomOf="@+id/premium_trial_button" />

            <TextView
                android:id="@+id/terms_and_condition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/proximanovalight"
                android:gravity="center"
                android:linksClickable="true"
                android:text="@string/subscription_term_of_use"
                android:textColorLink="?attr/colorPrimary"
                android:textSize="@dimen/premium_little_text_size"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/materialCardView2"
                app:layout_constraintStart_toStartOf="@+id/materialCardView2"
                app:layout_constraintTop_toBottomOf="@+id/information_text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/premium_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/premium_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:drawableStartCompat="@drawable/check"
                    app:drawableTint="@android:color/white"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:text="@string/thousands_of_new_facts_articles"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/special_offer_title_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/special_offer_card" />

                <TextView
                    android:id="@+id/premium_conditions2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:text="@string/uf_premium_second"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/special_offer_title_text"
                    app:drawableStartCompat="@drawable/check"
                    app:drawableTint="@android:color/white"
                    app:layout_constraintEnd_toEndOf="@+id/premium_conditions"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/premium_conditions"
                    app:layout_constraintTop_toBottomOf="@+id/premium_conditions" />

                <TextView
                    android:id="@+id/premium_conditions3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:drawableStartCompat="@drawable/check"
                    app:drawableTint="@android:color/white"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:text="@string/uf_premium_third"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/special_offer_title_text"
                    app:layout_constraintEnd_toEndOf="@+id/premium_conditions"
                    app:layout_constraintStart_toStartOf="@+id/premium_conditions"
                    app:layout_constraintTop_toBottomOf="@+id/premium_conditions2" />

                <TextView
                    android:id="@+id/premium_conditions4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:drawableStartCompat="@drawable/check"
                    app:drawableTint="@android:color/white"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:text="@string/uf_premium_forth"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/special_offer_title_text"
                    app:layout_constraintEnd_toEndOf="@+id/premium_conditions"
                    app:layout_constraintStart_toStartOf="@+id/premium_conditions"
                    app:layout_constraintTop_toBottomOf="@+id/premium_conditions3" />

                <TextView
                    android:id="@+id/premium_conditions5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:drawableStartCompat="@drawable/check"
                    app:drawableTint="@android:color/white"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/proximanovasemibold"
                    android:text="@string/uf_premium_fifth"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/special_offer_title_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/premium_conditions"
                    app:layout_constraintStart_toStartOf="@+id/premium_conditions"
                    app:layout_constraintTop_toBottomOf="@+id/premium_conditions4" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/special_offer_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/premium_orange"
                    app:cardCornerRadius="@dimen/premium_topic_card_vertical_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".75">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@color/premium_orange">

                        <TextView
                            android:id="@+id/facts_premium_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/proximanovasemibold"
                            android:text="@string/premium_title"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/special_offer_title_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/facts_premium_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/proximanovabold"
                            android:text="@string/premium_subtitle"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/premium_pack_text"
                            app:layout_constraintBottom_toTopOf="@+id/count_down_layout"
                            app:layout_constraintEnd_toEndOf="@+id/facts_premium_title"
                            app:layout_constraintStart_toStartOf="@+id/facts_premium_title"
                            app:layout_constraintTop_toBottomOf="@+id/facts_premium_title"
                            app:layout_constraintVertical_bias="0.0" />

                        <View
                            android:id="@+id/bargain_split_line"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/white"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/facts_premium_subtitle"
                            app:layout_constraintWidth_percent=".75"
                            tools:visibility="visible" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/count_down_layout"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="5:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/bargain_split_line"
                            app:layout_constraintWidth_percent=".8"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/countdown_day"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_pack_text"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toTopOf="@+id/guideline34"
                                app:layout_constraintEnd_toStartOf="@+id/guideline29"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/countdown_day_identifier"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="DAYS"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_little_text_size"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/guideline29"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/countdown_day"
                                app:layout_constraintVertical_bias="0.0" />

                            <TextView
                                android:id="@+id/countdown_hours"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_pack_text"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toTopOf="@+id/guideline34"
                                app:layout_constraintEnd_toStartOf="@+id/guideline30"
                                app:layout_constraintStart_toEndOf="@+id/countdown_day"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/countdown_hour_identifier"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="HOURS"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_little_text_size"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/guideline30"
                                app:layout_constraintStart_toEndOf="@+id/countdown_day"
                                app:layout_constraintTop_toBottomOf="@+id/countdown_hours" />

                            <TextView
                                android:id="@+id/countdown_mins"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_pack_text"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toTopOf="@+id/guideline34"
                                app:layout_constraintEnd_toStartOf="@+id/guideline31"
                                app:layout_constraintStart_toEndOf="@+id/countdown_hours"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/countdown_mins_identifier"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="MINS"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_little_text_size"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/guideline31"
                                app:layout_constraintStart_toEndOf="@+id/countdown_hours"
                                app:layout_constraintTop_toBottomOf="@+id/countdown_mins" />

                            <TextView
                                android:id="@+id/countdown_sec"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="00"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_pack_text"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toTopOf="@+id/guideline34"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/countdown_mins"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/countdown_sec_identifier"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:fontFamily="@font/proximanovabold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="SEC"
                                android:textColor="@android:color/white"
                                app:autoSizeMaxTextSize="@dimen/premium_little_text_size"
                                app:autoSizeMinTextSize="6sp"
                                app:autoSizeTextType="uniform"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/countdown_mins"
                                app:layout_constraintTop_toBottomOf="@+id/countdown_sec" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline29"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.25" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.75" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline34"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintGuide_percent="0.5" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="w,2:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_your_plan_text"
                app:layout_constraintWidth_percent=".84"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/yearly_cl" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/life_time_cl" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/yearly_cl"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/premium_offer_bg_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent=".33"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view4">

                        <RadioButton
                            android:id="@+id/yearly_plan_radio_button"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:buttonTint="?attr/colorPrimary"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintHeight_percent=".5"
                            app:layout_constraintStart_toStartOf="@+id/guideline39"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/yearly_plan_price"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:fontFamily="@font/proximanovaregular"
                            android:gravity="center|start"
                            android:text="@string/yearly_plan_price"
                            android:visibility="gone"
                            app:autoSizeMaxTextSize="@dimen/premium_pack_text"
                            app:autoSizeMinTextSize="6sp"
                            app:autoSizeTextType="uniform"
                            app:layout_constraintBottom_toBottomOf="@+id/yearly_plan_radio_button"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent=".25"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/yearly_old_price"
                            app:layout_constraintTop_toBottomOf="@+id/yearly_plan_tw"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/yearly_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:fontFamily="@font/proximanovaregular"
                            android:gravity="center|start"
                            android:paddingEnd="8dp"
                            android:text="TextView"
                            android:textSize="@dimen/premium_pack_text"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/yearly_plan_price"
                            app:layout_constraintStart_toStartOf="@+id/yearly_plan_tw"
                            app:layout_constraintTop_toTopOf="@+id/yearly_plan_price"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/yearly_plan_tw"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/special_offer_vertical_margin"
                            android:fontFamily="@font/proximanovasemibold"
                            android:text="Yearly Plan"
                            app:autoSizeMaxTextSize="@dimen/premium_pack_button_text_size"
                            app:autoSizeMinTextSize="6sp"
                            app:autoSizeTextType="uniform"
                            app:layout_constraintBottom_toTopOf="@+id/yearly_plan_price"
                            app:layout_constraintEnd_toStartOf="@+id/textView15"
                            app:layout_constraintHeight_percent=".3"
                            app:layout_constraintStart_toEndOf="@+id/yearly_plan_radio_button"
                            app:layout_constraintTop_toTopOf="@+id/yearly_plan_radio_button"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/colorPrimary"
                            android:fontFamily="@font/proximanovasemibold"
                            android:padding="4dp"
                            android:text="POPULAR"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/premium_topic_description_text_size"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.057803467" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ml_cl"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/premium_offer_bg_color"

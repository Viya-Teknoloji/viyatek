<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entry_activity_bottom_tool_card"
    android:layout_width="0dp"
    android:fitsSystemWindows="false"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="?colorSurface"
    tools:visibility="visible"
    app:layout_constraintWidth_percent=".95"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintStart_toStartOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/entry_activity_image_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w:1:1"
            app:layout_constraintWidth_percent=".166"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/padding_decrease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tint="?colorOnSurface"
            app:srcCompat="@drawable/ic_left" />

        <androidx.appcompat.widget.AppCompatImageButton
            app:layout_constraintStart_toEndOf="@id/padding_decrease"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w:1:1"
            app:layout_constraintWidth_percent=".166"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/padding_increase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tint="?colorOnSurface"
            app:srcCompat="@drawable/ic_right" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_fit_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w:1:1"
            app:layout_constraintStart_toEndOf="@id/padding_increase"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".166"
            app:srcCompat="@drawable/ic_fit"
            app:tint="?colorOnSurface" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/zoom_in_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tint="?colorOnSurface"
            app:layout_constraintWidth_percent=".166"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w:1:1"
            app:layout_constraintStart_toEndOf="@+id/image_fit_button"
            app:srcCompat="@drawable/ic_zoom_in" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/zoom_out_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tint="?colorOnSurface"
            app:layout_constraintWidth_percent=".166"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w:1:1"
            app:layout_constraintStart_toEndOf="@+id/zoom_in_button"
            app:srcCompat="@drawable/ic_zoom_out" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_delete"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w:1:1"
            app:layout_constraintStart_toEndOf="@+id/zoom_out_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".166"
            app:srcCompat="@drawable/ic_delete"
            app:tint="?colorOnSurface" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>